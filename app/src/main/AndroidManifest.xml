<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Album"
        tools:targetApi="31">

        <!-- Definir a nova tela ImageSaveActivity como a tela principal -->
        <activity
            android:name=".ImageSaveActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity da tela principal (MainActivity) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Activity para detalhes do Ã¡lbum -->
        <activity
            android:name=".AlbumDetailActivity"
            android:exported="false" />

        <!-- Outra nova Activity -->
        <activity
            android:name=".SelecaoAlbumActivity"
            android:exported="false" />

    </application>
</manifest>
